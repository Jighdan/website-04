---
import cx from "classnames";

export interface Props {
  label: string;
  position?: "left" | "right";
}

const { label, position = "left" } = Astro.props;

const baseClassNames = [
  "text-6xl md:text-7xl lg:text-8xl 2xl:text-9xl",
  "font-display font-medium uppercase",
  "flex flex-col",
];

const className = cx(baseClassNames, {
  "text-left": position === "left",
  "m-0 text-right": position === "right",
});

const content = label.split(" ");
---

<h2 class={className}>
  {content.map((text) => <span class="leading-[0.8]">{text}</span>)}
</h2>
