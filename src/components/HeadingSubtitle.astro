---
import cx from "classnames";

export interface Props {
  label: string;
  position?: "left" | "right";
}

const { label, position = "left" } = Astro.props;
const content = position === "left" ? `// ${label}` : `${label} //`;
const className = cx("text-lg lowercase", {
  "text-left": position === "left",
  "text-right": position === "right",
});
---

<h3 class={className}>{content}</h3>
